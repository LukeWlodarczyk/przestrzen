---
import ReservationOfficeLayout from "@features/reservation/layouts/ReservationOfficeLayout.astro";

import ReservationOfficeSection from "@features/reservation/sections/ReservationOffice.astro";

import TestimonialsPreviewSection from "@features/testimonials/sections/TestimonialsPreview.astro";
import ContactPreviewSection from "@features/contact/sections/ContactPreview.astro";

import loadOfficesData from "@features/reservation/loaders/officesLoader";

export const getStaticPaths = async () => {
  const { list } = await loadOfficesData();

  return list.map((office) => ({
    params: { slug: office.slug },
    props: { office },
  }));
};

const { office } = Astro.props;
---

<ReservationOfficeLayout office={office}>
  <ReservationOfficeSection office={office} />

  <TestimonialsPreviewSection />
  <ContactPreviewSection />
</ReservationOfficeLayout>
