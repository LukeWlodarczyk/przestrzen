---
import Heading from "@components/typography/Heading.astro";
import Paragraph from "@components/typography/Paragraph.astro";

import Image from "@components/media/Image/Image.astro";

import { tw } from "@utils/index.ts";

interface Props {
  className?: string;
  href: string;
  imgSrc: string;
  imgLQIPData?: string;
  label: string;
  description: string;
}

const { className, href, imgSrc, imgLQIPData, label, description } =
  Astro.props;

const baseClasses = tw("group @container h-full w-full");
---

<article class:list={tw(baseClasses, className)}>
  <a
    aria-label=`Dowiedz się więcej o: ${label}`
    class="flex h-full flex-col rounded-2xl outline-warm-yellow transition-colors group-focus-within:border-deep-green group-hover:border-deep-green hover:cursor-pointer @md:flex-row @md:items-center @md:gap-(--space-m-l)"
    href={href}
  >
    <Image
      alt=""
      aria-hidden="true"
      className="noise-10 max-h-[200px] overflow-hidden brightness-95 transition group-focus-within:brightness-105 group-hover:brightness-105 @md:mt-0 @md:max-h-[300px] @md:max-w-1/3"
      imgClassName="object-contain"
      lqipDataUrl={imgLQIPData}
      sizes="200px"
      src={imgSrc}
      widths={[200]}
    />
    <div
      class="flex flex-col px-(--space-s-m) pb-(--space-m) @md:pt-(--space-m) @md:pl-0"
    >
      <Heading
        className="text-center text-base font-normal tracking-normal text-balance text-forest-green transition-colors group-focus-within:text-warm-yellow group-hover:text-warm-yellow @md:text-left"
        level={3}
      >
        {label}
        <span class="pl-(--space-xs)">→</span>
      </Heading>
      <Paragraph
        className="mt-(--space-2xs) block text-justify text-sm text-pretty text-forest-green"
      >
        {description}
      </Paragraph>
    </div>
  </a>
</article>
