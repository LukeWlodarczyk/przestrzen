---
import { tw } from "@utils/index";
import Arrow from "../assets/arrow.svg";

import { classes } from "../script/config";

const baseButtonClass = tw(
  "w-(--space-5xl) cursor-pointer text-warm-white transition-colors outline-none hover:text-warm-yellow focus-visible:text-warm-yellow active:text-warm-yellow",
);
---

<div
  aria-label="Kontrola pokazu slajdów"
  class="right-0 left-0 mx-auto flex w-full max-w-[850px] justify-between md:absolute md:top-[calc(var(--testimonials-carousel-video-width)*0.5)] md:-translate-y-1/2"
  role="group"
>
  <button
    aria-label="Poprzedni slajd"
    class:list={tw(
      classes.button,
      classes.prev,
      baseButtonClass,
      "scale-x-[-1]",
    )}
  >
    <Arrow />
  </button>
  <button
    aria-label="Następny slajd"
    class:list={tw(classes.button, classes.next, baseButtonClass)}
  >
    <Arrow />
  </button>
</div>
