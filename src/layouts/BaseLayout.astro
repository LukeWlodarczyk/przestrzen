---
import "@styles/global.css";

import Header from "@components/layout/Header/Header.astro";
import Footer from "@components/layout/Footer/Footer.astro";

import FontPreload, { type FontName } from "@layouts/FontPreload.astro";

import { type StaticRouteValue } from "@routes";

interface Props {
  metaTitle: string;
  metaDescription: string;
  fontsToPreload: FontName[];
  currentPage: StaticRouteValue;
}

const { metaTitle, metaDescription, fontsToPreload, currentPage } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <meta content={Astro.generator} name="generator" />

    <link href="/sitemap-index.xml" rel="sitemap" />

    <FontPreload fontNames={fontsToPreload} />

    <meta content={metaDescription} name="description" />
    <title>{metaTitle}</title>
  </head>
  <body>
    <Header currentPage={currentPage} />
    <main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>
