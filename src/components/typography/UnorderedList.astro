---
import { tw, type PropsWithChildren } from "@utils/index";

type Props = PropsWithChildren<{
  className?: string;
}>;

const { className } = Astro.props;

const baseClasses = tw("list-disc px-(--space-s) marker:text-warm-yellow");

const classList = tw(baseClasses, className);
---

<ul class:list={classList}><slot /></ul>
