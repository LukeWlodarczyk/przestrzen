---
import { tw, type PropsWithChildren } from "@utils/index";

type Props = PropsWithChildren<{
  className?: string;
  type?: "normal" | "medium" | "bold";
}>;

const { type = "bold", className } = Astro.props;

const baseClasses = tw("");

const weightClasses = {
  normal: "font-normal",
  medium: "font-medium",
  bold: "font-bold",
} as const;

const classList = tw(baseClasses, weightClasses[type], className);
---

<span class:list={classList}><slot /></span>
