---
import { tw } from "@utils/index.ts";

interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6;
  className?: string;
  children: any; // eslint-disable-line @typescript-eslint/no-explicit-any
}

const { className = "", level } = Astro.props;

const baseClasses = tw("text-base tracking-widest text-warm-yellow");

const Tag = `h${level}`;
---

<Tag class:list={tw(baseClasses, className)}>
  <slot />
</Tag>
