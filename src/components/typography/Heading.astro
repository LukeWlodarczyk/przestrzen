---
import { tw, type PropsWithChildren } from "@utils/index.ts";

type Props = PropsWithChildren<{
  level: 1 | 2 | 3 | 4 | 5 | 6;
  className?: string;
}>;

const { className = "", level } = Astro.props;

const baseClasses = tw("text-base tracking-widest text-warm-yellow");

const Tag = `h${level}`;
---

<Tag class:list={tw(baseClasses, className)}>
  <slot />
</Tag>
