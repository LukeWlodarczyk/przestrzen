---
import TopBar from "@components/layout/header/components/TopBar.astro";
import NavBar from "@components/layout/header/components/NavBar.astro";

import { ids } from "@components/layout/header/script/config";

import type { StaticRouteValue } from "@routes";

interface Props {
  currentPage: StaticRouteValue;
}

const { currentPage } = Astro.props;
---

<header
  class="app-header-wrapper fixed top-0 z-10 flex w-full flex-col"
  id={ids.header}
>
  <TopBar id={ids.topBar} />
  <NavBar currentPage={currentPage} id={ids.navBar} />
</header>

<style>
  .app-header-wrapper {
    --app-header-top-bar-height: 40px;
  }
</style>

<script>
  import initHeader from "./script/header";

  initHeader();
</script>
